<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prakt_culculator.Page4"
             Title="Будильник">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Будильник" FontSize="50" HorizontalOptions="CenterAndExpand" TextColor="HotPink"/>
            <StackLayout Orientation="Horizontal">
                <CheckBox x:Name="TurnOnGetUpper" IsChecked="False" HorizontalOptions="CenterAndExpand" Scale="2" CheckedChanged="TurnOnGetUpper_CheckedChanged"/>
                <Label x:Name="text_TurnOn" Text="Включить" FontSize="30" TextColor="Black" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <TimePicker x:Name="timePicker" Format="HH:mm" HorizontalOptions="CenterAndExpand" FontSize="60"/>
            <Button x:Name="butonSet" Text="Установить" FontSize="14" TextColor="Black" BorderColor="DarkGoldenrod" BorderWidth="2" BorderRadius="20" HorizontalOptions="CenterAndExpand" BackgroundColor="AliceBlue" Clicked="butonSet_Clicked"/>
            <Button x:Name="butonReset" Text="Сбросить" FontSize="14" TextColor="Black" BorderColor="DarkGoldenrod" BorderWidth="2" BorderRadius="20" HorizontalOptions="CenterAndExpand" BackgroundColor="AliceBlue" Clicked="butonReset_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>